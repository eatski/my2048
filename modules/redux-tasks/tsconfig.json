{
    "compilerOptions": {
      "sourceMap": true,
      // TSはECMAScript 5に変換
      "strict": true, 
      "target": "es5",
      // TSのモジュールはES Modulesとして出力
      "module": "es2015",
      // JSXの書式を有効に設定
      "moduleResolution": "node",
      "lib": [
        "es2015",
        "dom"
      ],
      "baseUrl":".",
      "rootDir": ".",
      "outDir":"./dist",
      "paths": {
        "@/*": ["src/*"]
      },
      "typeRoots": ["node_modules/@types"],
      "declaration": true,
    },
    "exclude": [
      "node_modules"
    ]
  }